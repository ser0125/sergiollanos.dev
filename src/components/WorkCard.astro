---
const { image, title } = Astro.props;
---

<div class="work-card">
  <img src={image} alt="Allstate image" width="330px" height="180px"  />
  <h5>{title}</h5>
</div>
<style>
  .work-card {
    box-shadow: 0 1px 4px 0px rgba(0, 0, 0, 0.2);
    display: flex;
    flex-direction: column;
    gap: 1rem;
    border-radius: 12px;
    padding: 8px;
  }
  .work-card:hover {
    box-shadow: 0px 4px 8px 0px rgba(0, 0, 0, 0.2);
  }
</style>
