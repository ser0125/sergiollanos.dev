---
import ResumeCard from "./ResumeCard.astro";
---

<section id="resume">
  <h2 class="resume-title">Experience</h2>
  <div class="resume-wrapper">
    <div class="timeline-icon start"></div>
    <div class="timeline-line"></div>
    <ResumeCard
      date="2023-Present"
      role="Senior Software Developer"
      company="Corserva"
      img="/sergiollanos.dev/src/assets/icons/corserva.jpg"
    />

    <ResumeCard
      date="2022-2023"
      role="Senior Software Developer"
      company="Avenue Code"
      img="/sergiollanos.dev/src/assets/icons/avenue-code.jpg"
    />

    <ResumeCard
      date="2021-2022"
      role="Senior Software Developer"
      company="Growth Acceleration Partners"
      img="/sergiollanos.dev/src/assets/icons/gap.png"
    />

    <ResumeCard
      date="2019-2021"
      role="Frontend Developer"
      company="Globant"
      img="/sergiollanos.dev/src/assets/icons/globant.png"
    />

    <ResumeCard
      date="2018-2019"
      role="Frontend Developer"
      company="Accenture"
      img="/sergiollanos.dev/src/assets/icons/accenture.png"
    />

    <ResumeCard
      date="2016-2018"
      role="Frontend Developer"
      company="Virtual Unity"
      img="/sergiollanos.dev/src/assets/icons/udea.png"
    />
    <div class="timeline-icon finish"></div>
  </div>
  <a
    href="/sergiollanos.dev/src/assets/SergioLlanos-resume.pdf"
    download
    class="download-button"
  >
    Resume
  </a>
</section>

<style>
  section {
    padding: 2em;
    box-shadow: 0 8px 26px 0 rgba(22, 24, 26, 0.07);
  }

  .resume-title {
    margin-top: 0;
    font-size: 2em;
    margin-bottom: 2em;
    font-weight: bold;
    cursor: default;
  }

  .resume-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    margin-bottom: 10px;
  }

  .timeline-line {
    position: absolute;
    left: 50%;
    top: 0;
    width: 2px;
    height: 100%;
    background-color: #6a0dad;
    z-index: -1;
  }

  .timeline-icon {
    position: absolute;
    background-color: #6a0dad;
    border-radius: 50%;
    width: 15px;
    height: 15px;
    z-index: 1;
  }

  .timeline-icon.start {
    top: -10px;
    left: 50%;
    transform: translateX(-44%);
  }

  .timeline-icon.finish {
    bottom: -10px;
    left: 50%;
    transform: translateX(-44%);
  }

  .download-button {
    display: inline-block;
    margin-top: 2em;
    animation: borderAnimation 1.5s infinite;
    padding: 0.8em 1.5em;
    font-size: 1em;
    font-weight: bold;
    text-align: center;
    color: #6a0dad;
    background-color: #fff;
    border: 3px solid transparent;
    border-radius: 8px;
    text-decoration: none;
    position: relative;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    overflow: hidden;
  }

  @keyframes borderAnimation {
    0% {
      border-color: transparent;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
    }
    50% {
      border-color: #6a0dad;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }
    100% {
      border-color: transparent;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
    }
  }

  .download-button:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
  }
</style>

<script type="module">
  import { colorText } from "/sergiollanos.dev/src/utils/colorText";
  document.addEventListener("DOMContentLoaded", () => {
    const elements = [document.querySelector(".resume-title")];

    elements.forEach((element) => {
      if (element) colorText(element);
    });
  });
</script>
